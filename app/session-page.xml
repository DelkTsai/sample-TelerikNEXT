<Page xmlns="http://www.nativescript.org/tns.xsd"
  xmlns:tsb="TelerikNEXT/TelerikNEXT/TelerikUI/side-bar"
  navigatedTo="pageNavigatedTo">
  <Page.optionsMenu>
    <MenuItem text="share" tap="shareTap" icon="ic_share" />
  </Page.optionsMenu>

  <GridLayout rows="auto, *">
    <!-- HEADER -->
    <GridLayout columns="auto, *" rows="auto, auto" style="background-image: url('~/images/background.jpg')">
      <GridLayout cssClass="action-bar" colSpan="2">
        <Image stretch="none" tap="shareTap" cssClass="share-image" src="res://ic_share"/>
        <Image stretch="none" tap="backTap" cssClass="favourite-image-session" src="res://ic_arrow_back"/>
      </GridLayout>
      <StackLayout margin="16 16 16 72" row="1">
        <Label text="{{ title }}" textWrap="true" cssClass="session-page-title"/>
        <Label cssClass="session-page-subtitle">
          <Label.formattedText>
            <FormattedString>
              <FormattedString.spans>
                <Span text="{{ range}}" fontAttributes="Bold" />
                <Span text=", " fontAttributes="Bold" />
                <Span text="{{ room }}" fontAttributes="Bold" />
              </FormattedString.spans>
            </FormattedString>
          </Label.formattedText>
        </Label>
      </StackLayout>
      <Image stretch="none" tap="toggleFavorite" cssClass="favourite-image-session" row="1"
        src="{{ favorite ? 'res://ic_add_to_fav_1' : 'res://ic_add_to_fav' }}"
        visibility="{{ canBeFavorited ? 'visible' : 'collapsed' }}" />
    </GridLayout>

    <!-- Content -->
    <ScrollView row="1" id="scroll">
    <GridLayout row="1" rows="auto, auto, auto, auto, *" columns="56, *" margin="0 16" >
        <!-- Description -->
        <Label cssClass="description" textWrap="true" col="1" id="txtDescription" text="{{ descriptionShort }}" />

        <!-- Button -->
        <Button text="MORE" tap="toogleDescritpion"  cssClass="more-button" row="1" col="1"/>

        <!-- Line -->
        <StackLayout cssClass="horizontal-line" row="2" col="1"/>

        <!-- Speakers -->
        <Label text="Speakers" cssClass="section-header" row="3" col="1" />

        <ListView items="{{ speakers }}" row="4" colSpan="2" selectedBackgroundColor="#fac950" separatorColor="#FFFFFF">
          <ListView.itemTemplate>
            <GridLayout columns="56, *" cssClass="speakers-row">
              <Image src="{{ '~/TelerikNEXT/images/' + picture }}" verticalAlignment="top"/>

              <StackLayout col="1">
                <Label cssClass="info">
                  <Label.formattedText>
                    <FormattedString>
                      <FormattedString.spans>
                        <Span text="{{ name }}" fontAttributes="Bold" />
                      </FormattedString.spans>
                    </FormattedString>
                  </Label.formattedText>
                </Label>
                <Label cssClass="info">
                  <Label.formattedText>
                    <FormattedString>
                      <FormattedString.spans>
                        <Span text="{{ title }}" fontAttributes="Italic" />
                      </FormattedString.spans>
                    </FormattedString>
                  </Label.formattedText>
                </Label>
                <Label text="{{ company }}" cssClass="info"/>
              </StackLayout>

            </GridLayout>
          </ListView.itemTemplate>
        </ListView>
      </GridLayout>
    </ScrollView>
  </GridLayout>
</Page>